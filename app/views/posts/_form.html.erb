<%= simple_form_for(@post) do |f| %>
    <%= f.input :title, label: false, placeholder: "Title here..." %>
    <%= f.input :content, label: false, placeholder: "Write post here..." %>
    <%= f.collection_radio_buttons :draft, [[true, 'Idea'], [false, 'Publish']], :first, :last %>
    <%= f.input :slug, placeholder: "Leave blank to automatically generate" %>

    <%= f.button :submit, 'Save' %>
<% end %>
