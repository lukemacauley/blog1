<%= simple_form_for(@post) do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :draft %>
    <%= f.input :slug, placeholder: "Leave blank to automatically generate" %>
    <%= f.input :url, placeholder: "Optional external link" %>

    <%= f.button :submit, 'Preview', id: 'preview-button', preview: true, target: '_blank'  %>
    <%= f.button :submit, 'Save' %>
<% end %>
