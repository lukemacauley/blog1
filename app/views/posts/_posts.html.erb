<% @posts.each do |post| %>

  <h2><%= link_to post.title, post %></h2>
  <h4><%= post.updated_at.strftime('%d %B %Y') %></h4>

  <p><%= markdown(post.content) %></p>
  
  <p>
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>

<% end %>