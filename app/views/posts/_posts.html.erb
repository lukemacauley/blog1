<% @posts.each do |post| %>

	<h2><%= link_to post.title, post %></h2>
  <h4><%= link_to "#{post.user.username}", '#' %> <%= "on" unless post.user.name.nil? %> <%= post.updated_at.strftime('%d %B %Y') %></h4>

	<% truncate(markdown(post.content), length: 250, separator: ' ', omission: ' ... ', escape: false) { link_to "Continue Reading", post } %>
  
  <% if post.user == current_user %>
  <p>
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
  <% end %>

<% end %>