<section class="posts">
  <% @posts.each do |post| %>
    <article class="post" id="post-<%= post.id %>">
  
      <h1><%= link_to post.title, post %></h1>
      <h4>
        <span class="name"><%= link_to post.user.name, '#' %></span>
        <span class="date"><%= post.updated_at.strftime('%d %B %Y') %></span>
      </h4>
    
      <%= truncate(markdown(post.content), length: 500, separator: ' ', omission: ' ... ', escape: false) {   link_to "Continue Reading", post, class: "continue" } %>
    </article>
  <% end %>
</section>
