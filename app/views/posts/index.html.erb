<h1>Posts</h1>

<% @posts.each do |post| %>

  <h3><%= link_to post.title, post %></h3>
  <p><%= post.content %></p>
  <p>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>

<% end %>

<%= link_to 'New Post', new_post_path %>
