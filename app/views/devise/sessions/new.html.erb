<section class="devise">
	<h1>Login</h1>
	
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :login, placeholder: "Username or Email", label: false, required: false, autofocus: true %>
	    <%= f.input :password, placeholder: "Password", label: false, required: false %>
	    <%= f.input :remember_me, label: "Remember me?", as: :boolean if devise_mapping.rememberable? %>
	  </div>
	
	  <div class="form-actions">
	    <%= f.button :submit, "Login" %>
	  </div>
	<% end %>
	
	<%= render "devise/shared/links" %>
</section>